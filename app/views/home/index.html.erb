<div id= "header">
  <h2 id="logo1">middle</h2>
  <%= image_tag("locationpin.png") %>
  <h2 id="logo2">ground</h2>
</div>  
<div class="wrapper">
  <div id="panel">
    <b>Start: </b>
    <select id="start" onchange="deleteMarkers(); calcRoute();">
      <option value="90 John St, new york, ny">NYCDA</option>
      <option value="philadelphia, pa">Philadelphia</option>
      <!-- <option value="new york, ny">New York</option> -->
      <option value="los angeles, ca">Los Angeles</option>
      <option value="Yankees Stadium">Yankees Stadium</option>
      <option value="Brooklyn College">Brooklyn College</option>
      <option value="flushing, ny">Flushing</option>    
    </select>
    <b>End: </b>
    <select id="end" onchange="deleteMarkers(); calcRoute();">
      <option value="90 John St, new york, ny">NYCDA</option>
      <option value="philadelphia, pa">Philadelphia</option>
      <!-- <option value="new york, ny">New York</option> -->
      <option value="los angeles, ca">Los Angeles</option>
      <option value="Yankees Stadium">Yankees Stadium</option>
      <option value="Brooklyn College">Brooklyn College</option>
      <option value="flushing, ny">Flushing</option>
    </select>
  </div>
  <div id="map-canvas"></div>
  <!--   <button style="margin: 30px 30px 10px 65px; width: 300px;" onclick="deleteMarkers()">Delete middle ground markers</button><br> --> 
  <button onclick="reload()">Reload page</button>
  <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&key=<%= Rails.application.secrets.googlemaps_api_key %>&libraries=places"></script>
  <script type="text/javascript">
  var directionsDisplay;
  var directionsService = new google.maps.DirectionsService();
  var markers = [];
  var map;

  function initialize() {
      directionsDisplay = new google.maps.DirectionsRenderer();
      var nycda = new google.maps.LatLng(40.707910, -74.006483); //initialize the first value
      var mapOptions = {
          zoom: 9,
          center: nycda
      };
      map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions); //mapOptions call from above //displays the map
      directionsDisplay.setMap(map); //shows the directions
      var transitLayer = new google.maps.TransitLayer();  //shows transit routes
          transitLayer.setMap(map);
  }

  function calcRoute() {

      var start = document.getElementById('start').value;
      var end = document.getElementById('end').value;
      var request = {
          origin: start,
          destination: end,
          travelMode: google.maps.TravelMode.TRANSIT 
      };
      directionsService.route(request, function (response, status) {

          if (status == google.maps.DirectionsStatus.OK) {
              directionsDisplay.setDirections(response);
              var numberofWaypoints = response.routes[0].overview_path.length;
              
              var midPoint=response.routes[0].overview_path[parseInt( numberofWaypoints / 2)];
              var marker = new google.maps.Marker({
                  map: map,
                  position:new google.maps.LatLng(midPoint.lat(),midPoint.lng()),
                  title :'Mid Point'
              });
              var infowindow = new google.maps.InfoWindow({
                content:"This is your middle ground!"
              });
              google.maps.event.addListener(marker,'click',function() { //zooms in
                map.setZoom(17); //the greater the number, the farther it zooms in
                map.setCenter(marker.getPosition());
                infowindow.open(map,marker);
              });
              markers.push(marker);
              }
              });
          }

      // Sets the map on all markers in the array.
      function setMapOnAll(map) {
        for (var i = 0; i < markers.length; i++) {
          markers[i].setMap(map);
        }
      }

      // Removes the markers from the map, but keeps them in the array.
      function clearMarkers() {
        setMapOnAll(null);
      }

      // Shows any markers currently in the array.
      function showMarkers() {
        setMapOnAll(map);
      }

      // Deletes all markers in the array by removing references to them.
      function deleteMarkers() {
        clearMarkers();
        markers = [];
      }

      function reload() {
        location.reload();
      }

  google.maps.event.addDomListener(window, 'load', initialize); //load


  </script>
</div>

